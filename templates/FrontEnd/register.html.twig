<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Inscription{% endblock %}</title>
    {% block stylesheets %}
        <link rel="stylesheet" type="text/css" href="{{ asset("assets/register.css") }}" />
    {% endblock %}
</head>
<body>
{% block body %}

    <div class="signinSection">
        <div class="info">
            <h2>Vetux-Line</h2>
            <img src="assets/image/vetux-icon.png"/>
            <p>Upload de fichier CSV & fusion</p>
        </div>
        {{ form_start(registrationForm, {'method': 'post', 'action': 'attr': {'class': 'signinFormulaire form-control'}}) }}
            <h2>Formulaire d'inscription</h2>
            <ul class="noBullet">
                <li>
                    {{ form_row(registrationForm.username, {
                        label : 'Nom d\'utilisateur'
                    }) }}
                </li>
                <li>
                    {{ form_row(registrationForm.plainPassword, {
                        class: "form-control",
                        label: 'Mot de passe'
                    }) }}
                </li>
                <li>
                    <button class="form-control formulaireInscriptionBottom" type="submit">
                        S'inscrire
                    </button>
                </li>
                <li>
                    <h3>Vous n'êtes pas encore connecté ? <a href="{{ path('login') }}">Connectez-vous ici</a></h3>
                </li>
            </ul>
            {{ form_end(registrationForm) }}
    </div>
{% endblock %}

</body>
</html>